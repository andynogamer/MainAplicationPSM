<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_all_4"
    tools:context=".view.NewForumFragment">

    <TextView
        android:id="@+id/tvTitleNewForum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Crear Nuevo Foro"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/flBannerContainer"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleNewForum">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivForumBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/search_bar_backgorun"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:background="@drawable/button_rounded_login"
            android:padding="8dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            app:tint="@color/black" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvBannerHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Toca la imagen para subir un banner"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/flBannerContainer"
        app:layout_constraintStart_toStartOf="@+id/flBannerContainer"
        app:layout_constraintTop_toBottomOf="@+id/flBannerContainer" />

    <EditText
        android:id="@+id/etForumName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_rounded_purple"
        android:ems="10"
        android:hint="Nombre del foro"
        android:inputType="textCapSentences"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/flBannerContainer"
        app:layout_constraintStart_toStartOf="@+id/flBannerContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvBannerHint" />

    <EditText
        android:id="@+id/etForumDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/search_bar_backgorun"
        android:ems="10"
        android:gravity="top|start"
        android:hint="Describe de quÃ© trata este foro..."
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateForum"
        app:layout_constraintEnd_toEndOf="@+id/etForumName"
        app:layout_constraintStart_toStartOf="@+id/etForumName"
        app:layout_constraintTop_toBottomOf="@+id/etForumName" />

    <Button
        android:id="@+id/btnCreateForum"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_rounded_register"
        android:text="Crear Foro"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etForumName"
        app:layout_constraintStart_toStartOf="@+id/etForumName" />

</androidx.constraintlayout.widget.ConstraintLayout>