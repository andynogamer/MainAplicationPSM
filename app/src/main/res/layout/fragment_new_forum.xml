<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_all_4"
    tools:context=".NewForumFragment">

    <ImageView
        android:id="@+id/ivForumImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_rounded_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/etForumName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_rounded_purple"
        android:ems="10"
        android:gravity="center"
        android:hint="Nombre del foro"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivForumImage" />

    <EditText
        android:id="@+id/etForumDescription"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:ems="10"
        android:gravity="top"
        android:hint="DescripciÃ³n...."
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/etForumName"
        app:layout_constraintStart_toStartOf="@+id/etForumName"
        app:layout_constraintTop_toBottomOf="@+id/etForumName" />

    <Button
        android:id="@+id/btnCreateForum"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_rounded_register"
        android:text="Crear"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etForumName"
        app:layout_constraintStart_toStartOf="@+id/etForumName" />

</androidx.constraintlayout.widget.ConstraintLayout>