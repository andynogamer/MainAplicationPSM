<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_all_4">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="70dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/ivProfileAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/button_rounded_login"
                    android:padding="8dp"
                    app:srcCompat="@android:drawable/ic_menu_camera"
                    app:tint="@color/black" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información Personal"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etProfileName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/etProfileLastNameFather"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@color/white"
                    android:hint="Ap. Paterno"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/etProfileLastNameMother"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="Ap. Materno"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/etProfileAlias"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:hint="Alias (Username)"
                android:inputType="text"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/etProfilePhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:hint="Teléfono"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/etProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="32dp"
                android:background="#D3D3D3"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:enabled="false"
                android:paddingHorizontal="16dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_rounded_register"
                android:text="Guardar Cambios"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMyDrafts"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#555555"
                android:text="Ver mis Borradores"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#FF0000"
                android:text="Cerrar Sesión"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>